server {
    listen              80 default_server;
    listen              [::]:80 default ipv6only=on;
    server_name         pinkhatbeard.com pinkhatbeard.cloudapp.net www.pinkhatbeard.com;
    root                /var/www/pinkhatbeard.com;

    location /static/ {
        alias           /var/www/pinkhatbeard.com/app/static/;
        expires         30d;
    }

    location / {
        uwsgi_pass      127.0.0.1:3031;
        include         uwsgi_params;
    }
}
